<% include ./partials/header.ejs %>
  <div class="flex w-[100vw] absolute left-0 top-0 h-[100vh] text-slate-700 bg-cover bg-center bg-[url('https://images.unsplash.com/photo-1625488368662-1002d31bcb30?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] items-center justify-center">
    <div class="flex flex-col gap-3 w-[25vw] py-[40px] border-2 shadow-inner rounded-md items-center p-2">
      <h1 class="tracking-tight text-4xl leading-none">Create New Account</h1>
      <form action="/register" method="post" class="w-full px-5">
        <input class="rounded-md mt-3 font-momo w-full border border-slate p-3" required type="text" name="username" placeholder="username">
        <input class="rounded-md mt-3 font-momo w-full border border-slate p-3" required type="text" name="fullname" placeholder="Full name">
        <input class="rounded-md mt-3 font-momo w-full border border-slate p-3" required type="email" name="email" placeholder="email">
        <input class="rounded-md mt-3 font-momo w-full border border-slate p-3" required type="text" name="contact" placeholder="contact">
        <input class="rounded-md mt-3 font-momo w-full border border-slate p-3" required type="password" name="password" placeholder="password">
        <input type="submit" class="bg-red-600 hover:bg-red-500 mt-5 mb-2 cursor-pointer rounded-full text-white w-full py-2" value="Create new account">
        <p class="text-center mt-3 text-sm text-slate-900">terms and conditions applied</p>
      </form>
      <a href="/">Already have an account? <span class="underline text-blue-900">Login</span></a>
    </div>
  </div>
<% include ./partials/footer.ejs %>